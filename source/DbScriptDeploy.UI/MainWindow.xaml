<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:DbScriptDeploy.UI.Controls" x:Class="DbScriptDeploy.UI.MainWindow"
        Title="DbScriptDeploy v" Height="350" Width="525" MinWidth="640" MinHeight="480">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" DockPanel.Dock="Top" >
                <MenuItem Header="_File">
                    <MenuItem x:Name="mnuFileNewProject" Header="_New Project" Click="OnMnuFileNewProjectClick"/>
                    <MenuItem Name="mnuFileClose"  Header="_Exit" Click="OnMnuFileCloseClick"/>
                </MenuItem>
            </Menu>
            <Grid>
                <Controls:MainPanel Grid.Column="3" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" />
            </Grid>
        </DockPanel>
    </Grid>
</Window>
